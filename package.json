{
  "private": true,
  "name": "1-diploma-front-end",
  "description": "Diploma UC - Front ends",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "lint:css": "stylelint \"./packages/*/src/**/*.css\"",
    "lint:js": "lerna run lint:js",
    "lint:prettier": "prettier --check \"**/*.{md,mdx,html,json,yml,js,jsx,ts,tsx,css,scss}\"",
    "lint": "npm run lint:js && npm run lint:css && npm run lint:prettier",
    "test": "lerna exec --concurrency 1 --no-bail -- npm test"
  },
  "repository": {
    "type": "git",
    "url": "https://ec.europa.eu/cefdigital/code/scm/ebsi/1-diploma-front-end.git"
  },
  "license": "EUPL-1.2",
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-flowtype": "^4.5.3",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "husky": "^4.0.3",
    "lerna": "^3.20.2",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "stylelint": "^12.0.1",
    "stylelint-config-prettier": "^8.0.0",
    "stylelint-config-standard": "^19.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint",
      "git add"
    ],
    "*.{css,scss}": [
      "prettier --write",
      "stylelint",
      "git add"
    ],
    "*.{json,md,mdx}": [
      "prettier --write",
      "git add"
    ]
  }
}
